<% if @stylists.any?() %>
<p class="lead">Click on a Stylist to see their Clients:</p>
<div class="well well-sm">
  <ul>
    <% @stylists.each do |stylist| %>
    <li class="list-unstyled"><a class="lead" href="/stylists/<%= stylist.id() %>"><%= stylist.name() %></a></li>
    <% end %>
  </ul>
</div>
<% else %>
<p class="lead yellow">There are no hair stylists yet!</p>
<% end %>

<hr>
<p class="lead">Add a new stylist:</p>

<form class="form-inline" action="/stylists" method="post">
  <label class="sr-only" for="name">Stylist's Name:</label>
  <input id="name" class="form-control" name="name" type="text" placeholder="Enter Stylist's Name">

  <button type="submit" class="btn btn-default">Add New Stylist</button>
</form>
