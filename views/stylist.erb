<% if @stylist.clients().any?() %>
<p class="lead">Here are all the clients for <%= @stylist.name() %>:</p>
<div class="well well-sm">
  <ul>
    <% @stylist.clients().each() do |client| %>
    <li class="list-unstyled"><span class="lead"><%= client.name() %></span></li>
    <% end %>
  </ul>
</div>
<% else %>
<p class="lead yellow">There are no clients yet for this Stylist!</p>
<% end %>

<hr>
<p class="lead">Add a client for <%= @stylist.name() %> </p>

<form class="form-inline" action="/clients" method="post">
  <input id="stylist_id" name="stylist_id" type="hidden" value="<%= @stylist.id() %>">

  <label class="sr-only" for="name">Name of the Client:</label>
  <input class="form-control" id="name" name="name" type="text" placeholder="Enter Client's Name">

  <button type="submit" class="btn btn-default">Add Client</button>
</form>
<br>
